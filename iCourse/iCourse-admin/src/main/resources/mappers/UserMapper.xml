<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbgc.course.admin.dao.UserMapper">

    <select id="findUserByUsername" parameterType="String" resultType="com.hbgc.course.admin.po.UserPO">
        select * from t_user where account=#{name}
    </select>

    <select id="findUserByAccontAndPassword" resultType="com.hbgc.course.admin.po.UserPO">
        select * from t_user where account=#{username} and password=#{password} and isdel = 0
    </select>


</mapper>